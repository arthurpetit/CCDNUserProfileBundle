{%- spaceless -%}

	{%- set scale_x = (scale_x is defined) ? scale_x : 100 -%}
	{%- set scale_y = (scale_y is defined) ? scale_y : 100 -%}
	{%- set rounded = (rounded is defined) ? 'border-radius:' ~ rounded ~ 'px;' : '' -%}
	{%- set border =  (border is defined) ? 'border:' ~ border ~ 'px solid #ddd;': '' -%}
	{%- set padding = (padding is defined) ? 'padding:' ~ padding ~ 'px;': '' -%}
	
	{%- if user and user.getProfile and user.getProfile.getAvatar -%}
		{% thumbnail user.getProfile.getAvatar, 'medium' with {'class': 'avatar img-rounded', 'alt': user.getFullname } %}
	{% else %}
		<img  class="avatar" width="{{- scale_x -}}" height="{{- scale_y -}}" src="{{- asset('bundles/ccdncomponentcommon/images/profile/anonymous_avatar.gif') -}}" alt="avatar">	
	{% endif %}
	
{%- endspaceless -%}