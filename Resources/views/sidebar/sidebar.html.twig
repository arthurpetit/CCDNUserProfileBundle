{% spaceless %}
	{% set route = app.request.attributes.get('_route') %}

	<li class="nav-header">{{ 'sidebar.header.navigation' | trans({}, 'CCDNUserUserBundle') }}</li>
	<li><a href="{{ path(param('ccdn_user_profile.sidebar.members_route')) }}"><i class="icon-th-list"></i>&nbsp;{{ 'sidebar.link.members' |trans({}, 'CCDNUserMemberBundle') }}</a></li>

	{% if is_granted("ROLE_USER") %}

		<li><a href="{{ path(param('ccdn_user_profile.sidebar.account_route')) }}"><i class="icon-cog"></i>&nbsp;{{ 'sidebar.link.account.view' |trans({}, 'CCDNUserProfileBundle') }}</a></li>
