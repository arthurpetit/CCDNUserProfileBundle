{%- spaceless -%}
	<h2 style="display:inline-block;"><a href="{{- path('ccdn_user_profile_show_by_id', {'user_id':user.id}) -}}">{{- user.getUsername |capitalize -}}</a></h2>

	<div class="btn-toolbar pull-right">
		{%- if is_granted('ROLE_USER') -%}
			{%- if app.user.getId != user.getId -%}
			<a class="btn" href="{{- path('ccdn_message_message_mail_compose_to', {'user_id': user.getId }) -}}">{{- 'link.user.message' | trans({}, 'CCDNUserProfileBundle') -}}</a>&nbsp;

				{%- if is_granted('ROLE_ADMIN') -%}
				<a class="btn btn-primary" href="{{- path('ccdn_user_admin_account_show', {'user_id': user.getId }) -}}">{{- 'link.user.administrate'|trans({}, 'CCDNUserProfileBundle') -}}</a>&nbsp;
				{%- endif -%}
			{%- endif -%}

		{%- endif -%}
	</div>

	<hr>

	{%- if is_granted('ROLE_USER') -%}
		{%- if user.id == app.user.id or is_granted('ROLE_ADMIN') -%}
			<a class="btn pull-right" href="{{- path('ccdn_user_profile_edit_avatar', {'user_id':user.id}) -}}">{{- 'link.profile.edit' |trans({}, 'CCDNUserProfileBundle') -}}</a>
		{%- endif -%}
	{%- endif -%}

	{%- include 'CCDNUserProfileBundle:Avatar:item_avatar.html.twig' -%}

	<br>
{%- endspaceless -%}
