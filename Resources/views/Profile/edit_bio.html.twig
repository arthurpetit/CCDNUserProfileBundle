{% extends param('ccdn_user_profile.profile.edit.bio.layout_template') %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{- asset('bundles/ccdnuserprofile/js/jquery.profile.js') -}}" type="text/javascript"></script>
{% endblock %}

{% block title %}{{- truncDot('title.profile.edit' | trans({ '%user_name%': user.getUsername }, 'CCDNUserProfileBundle'), param('ccdn_user_profile.seo.title_length')) -}}{% endblock %}

{% block sidebar %}
	{{ parent() }}

	{%- include 'CCDNUserProfileBundle:Sidebar:sidebar.html.twig' -%}

{% endblock %}

{% block body %}

	{%- spaceless -%}

	{%- include 'CCDNComponentCommonBundle:Flashes:flashes.html.twig' -%}

	{%- include 'CCDNComponentCrumbTrailBundle:Trail:trail.html.twig' with {'crumbs': crumbs } -%}

	{%- include 'CCDNUserProfileBundle:Profile:item_header.html.twig' -%}

	{%- include 'CCDNUserProfileBundle:Profile:item_tabs.html.twig' -%}

	<h3 style="display:inline-block;">{{- 'profile.show.bio' |trans({}, 'CCDNUserProfileBundle') -}}</h3>
	<br>

	{%- form_theme form param('ccdn_user_profile.profile.edit.bio.form_theme') -%}
	<form action="{{- path('ccdn_user_profile_edit_bio') -}}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
		<fieldset>

			{{- form_errors(form) -}}

			<div class="control-group"><div class="controls row-fluid">{{- form_row(form._token) -}}</div></div>

			<div class="control-group{{- (form.bio.vars.errors|length > 0) ? ' error': '' -}}">
				{{- form_label(form.bio, null, { 'label': 'form.label.profile.edit.bio' |trans({}, 'CCDNUserProfileBundle') }) -}}
				<div class="controls row-fluid">
					{{- form_errors(form.bio) -}}
					{%- if param('ccdn_user_profile.profile.edit.bio.enable_bb_editor') -%}
						{%- form_theme form 'CCDNComponentBBCodeBundle:Form:fields.html.twig' -%}
					{%- endif -%}
					{{- form_widget(form.bio) -}}
				</div>
			</div>

			<div class="form-actions">
				<input type="submit" class="btn btn-primary" value="{{- 'form.button.profile.edit.update' |trans({}, 'CCDNUserProfileBundle') -}}">&nbsp;
				<a class="btn" href="{{- path('ccdn_user_profile_show_bio_by_id', {'userId':user.id}) -}}">{{- 'form.button.cancel' |trans({}, 'CCDNUserProfileBundle') -}}</a>
			</div>

		</fieldset>
	</form>

	{%- include 'CCDNComponentCrumbTrailBundle:Trail:trail.html.twig' with {'crumbs': crumbs } -%}

	{%- endspaceless -%}

{% endblock body %}
