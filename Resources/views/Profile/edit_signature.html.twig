{% extends param('ccdn_user_profile.profile.edit.signature.layout_template') %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{- asset('bundles/ccdnuserprofile/js/jquery.profile.js') -}}" type="text/javascript"></script>
{% endblock %}

{% block title %}{{- truncDot('title.profile.edit' | trans({ '%user_name%': user.getUsername }, 'CCDNUserProfileBundle'), param('ccdn_user_profile.seo.title_length')) -}}{% endblock %}

{% block sidebar %}
	{{ parent() }}
	
	{%- include 'CCDNUserProfileBundle:Sidebar:sidebar.html.twig' -%}
	
{% endblock %}

{% block body %}

	{%- spaceless -%}
	
	{%- include 'CCDNComponentCommonBundle:Flashes:flashes.html.twig' -%}

	{%- include 'CCDNComponentCrumbTrailBundle:Trail:trail.html.twig' with {'crumbs': crumbs } -%}

	<h2>{{- user.getUsername |capitalize -}}</h2>

	{%- include 'CCDNUserProfileBundle:Profile:item_tabs.html.twig' -%}
	
	{%- form_theme form param('ccdn_user_profile.profile.edit.signature.form_theme') -%}
	<form action="{{- path('cc_profile_edit_signature') -}}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
		<fieldset>
		
			{{- form_errors(form) -}}
		
			<div class="control-group"><div class="controls row-fluid">{{- form_row(form._token) -}}</div></div>

			<div class="control-group{{- (form.signature.vars.errors|length > 0) ? ' error': '' -}}">
				{{- form_label(form.signature, null, { 'label': 'form.label.profile.edit.signature' |trans({}, 'CCDNUserProfileBundle') }) -}}
				<div class="controls row-fluid">
					{{- form_errors(form.signature) -}}
 					{%- if param('ccdn_user_profile.profile.edit.signature.enable_bb_editor') -%}
						{%- form_theme form 'CCDNComponentBBCodeBundle:Form:fields.html.twig' -%}
					{%- endif -%}
					{{- form_widget(form.signature) -}}
				</div>
			</div>
		
			<div class="form-actions">
				<input type="submit" class="btn btn-primary" value="{{- 'form.button.profile.edit.update' |trans({}, 'CCDNUserProfileBundle') -}}">&nbsp;
				<a class="btn" href="{{- path('cc_profile_show_bio_by_id', {'user_id':user.id}) -}}">{{- 'form.button.cancel' |trans({}, 'CCDNUserProfileBundle') -}}</a>
			</div>
		
		</fieldset>
	</form>
	
	{%- include 'CCDNComponentCrumbTrailBundle:Trail:trail.html.twig' with {'crumbs': crumbs } -%}

	{%- endspaceless -%}
	
{% endblock body %}